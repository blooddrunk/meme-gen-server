{
  "name": "meme-gen-server",
  "version": "0.0.1",
  "description": "backend of MEME GEN",
  "author": "jelinenaro",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc && copyfiles -u 1 src/**/.env.* dist/",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "start:dist": "cross-env NODE_ENV=production node dist/main.js",
    "prestart:pm2": "rimraf dist && tsc && copyfiles -u 1 src/**/.env.* dist/",
    "start:pm2": "pm2 start process.yml",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.11",
    "@nestjs/core": "^5.3.11",
    "@nestjs/graphql": "^5.4.0",
    "apollo-server-express": "^2.1.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.0",
    "graphql-type-json": "^0.2.1",
    "helmet": "^3.13.0",
    "joi": "^13.7.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "typescript": "^3.1.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.11",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.1",
    "@types/jest": "^23.3.3",
    "@types/joi": "^13.6.0",
    "@types/node": "^10.11.4",
    "@types/supertest": "^2.0.6",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.3",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "5.11.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
